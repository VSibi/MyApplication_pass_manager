<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".EntryCreditCardActivity"
            tools:showIn="@layout/activity_entry_credit_card"
            android:fillViewport="false">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">





  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entry_credit_card_title_copy_imageButton"
        android:src="@drawable/ic_content_copy_black_24dp"
        android:layout_alignParentRight="true"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Title"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="4dp"
        android:id="@+id/entry_credit_card_title_textView"
        android:layout_toLeftOf="@id/entry_credit_card_title_copy_imageButton"
        android:layout_marginBottom="4dp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/entry_credit_card_customer_title_textView"
        android:layout_below="@id/entry_credit_card_title_textView"
        android:layout_toLeftOf="@id/entry_credit_card_title_copy_imageButton"
        android:hint="@string/Title" />



      <View style="@style/Divider"
          android:id="@+id/entry_credit_card_divider_1"
          android:layout_below="@id/entry_credit_card_customer_title_textView"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ImageButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/entry_credit_card_name_copy_imageButton"
          android:src="@drawable/ic_content_copy_black_24dp"
          android:layout_alignParentRight="true"

          android:layout_marginTop="20dp"
          android:layout_marginBottom="24dp"
          android:background="@android:color/transparent" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/Name"
          android:layout_marginLeft="24dp"
          android:layout_marginRight="4dp"
          android:id="@+id/entry_credit_card_name_textView"
          android:layout_toLeftOf="@id/entry_credit_card_name_copy_imageButton"
          android:layout_marginBottom="4dp"
          android:textColor="@color/colorAccent" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginLeft="24dp"
          android:layout_marginRight="4dp"
          android:layout_marginBottom="24dp"
          android:id="@+id/entry_credit_card_customer_name_textView"
          android:layout_below="@id/entry_credit_card_name_textView"
          android:layout_toLeftOf="@id/entry_credit_card_name_copy_imageButton"
          android:hint="@string/Name" />



      <View style="@style/Divider"
            android:id="@+id/entry_credit_card_divider_2"
            android:layout_below="@id/entry_credit_card_customer_name_textView"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entry_credit_card_number_copy_imageButton"
        android:src="@drawable/ic_content_copy_black_24dp"
        android:layout_alignParentRight="true"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Number"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="4dp"
        android:id="@+id/entry_credit_card_number_textView"
        android:layout_toLeftOf="@id/entry_credit_card_number_copy_imageButton"

        android:layout_marginBottom="4dp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/entry_credit_card_customer_number_textView"
        android:layout_below="@id/entry_credit_card_number_textView"
        android:layout_toLeftOf="@id/entry_credit_card_number_copy_imageButton"
        android:hint="@string/Number" />

      <View style="@style/Divider"
        android:id="@+id/entry_credit_card_divider_3"
        android:layout_below="@id/entry_credit_card_customer_number_textView"/>

      </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ImageButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/entry_credit_card_dateCard_copy_imageButton"
          android:src="@drawable/ic_content_copy_black_24dp"
          android:layout_alignParentRight="true"

          android:layout_marginTop="20dp"
          android:layout_marginBottom="24dp"
          android:background="@android:color/transparent" />


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/DateCard"
          android:layout_marginLeft="24dp"
          android:layout_marginRight="4dp"
          android:id="@+id/entry_credit_card_dateCard_textView"
          android:layout_toLeftOf="@id/entry_credit_card_dateCard_copy_imageButton"

          android:layout_marginBottom="4dp"
          android:textColor="@color/colorAccent" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_gravity="center"
          android:layout_marginLeft="24dp"
          android:layout_marginRight="4dp"
          android:layout_marginBottom="24dp"
          android:id="@+id/entry_credit_card_customer_dateCard_textView"
          android:layout_below="@id/entry_credit_card_dateCard_textView"
          android:layout_toLeftOf="@id/entry_credit_card_dateCard_copy_imageButton"
          android:hint="@string/DateCard" />

      <View style="@style/Divider"
          android:id="@+id/entry_credit_card_divider_4"
          android:layout_below="@id/entry_credit_card_customer_dateCard_textView"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ImageButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/entry_credit_card_cvv_copy_imageButton"
          android:src="@drawable/ic_content_copy_black_24dp"
          android:layout_alignParentRight="true"

          android:layout_marginTop="20dp"
          android:layout_marginBottom="24dp"
          android:background="@android:color/transparent" />


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/CVV"
          android:layout_marginLeft="24dp"
          android:layout_marginRight="4dp"
          android:id="@+id/entry_credit_card_cvv_textView"
          android:layout_toLeftOf="@id/entry_credit_card_cvv_copy_imageButton"

          android:layout_marginBottom="4dp"
          android:textColor="@color/colorAccent" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_gravity="center"
          android:layout_marginLeft="24dp"
          android:layout_marginRight="4dp"
          android:layout_marginBottom="24dp"
          android:id="@+id/entry_credit_card_customer_cvv_textView"
          android:layout_below="@id/entry_credit_card_cvv_textView"
          android:layout_toLeftOf="@id/entry_credit_card_cvv_copy_imageButton"
          android:hint="@string/CVV" />

      <View style="@style/Divider"
          android:id="@+id/entry_credit_card_divider_5"
          android:layout_below="@id/entry_credit_card_customer_cvv_textView"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entry_credit_card_pinCode_copy_imageButton"
        android:src="@drawable/ic_content_copy_black_24dp"
        android:layout_alignParentRight="true"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entry_credit_card_pinCode_open_symbol_imageButton"
        android:src="@drawable/ic_visibility_black_24dp"

        android:layout_toLeftOf="@id/entry_credit_card_pinCode_copy_imageButton"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="2dp"
        android:background="@android:color/transparent" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/PinCode"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="4dp"
        android:id="@+id/entry_credit_card_pinCode_textView"
        android:layout_toLeftOf="@id/entry_credit_card_pinCode_open_symbol_imageButton"

        android:layout_marginBottom="4dp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/entry_credit_card_customer_pinCode_textView"
        android:layout_below="@id/entry_credit_card_pinCode_textView"
        android:layout_toLeftOf="@id/entry_credit_card_pinCode_open_symbol_imageButton"
        android:hint="@string/PinCode" />

      <View style="@style/Divider"
          android:id="@+id/entry_credit_card_divider_6"
          android:layout_below="@id/entry_credit_card_customer_pinCode_textView"/>



    </RelativeLayout>



  </LinearLayout>



</ScrollView>
