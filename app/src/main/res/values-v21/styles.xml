<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="MyBlueButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorRipple</item>
    </style>

    <style name="MyAccentButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorGrayRipple</item>
    </style>

    <style name="MyFlatButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorFlatButton</item>
    </style>

</resources>
